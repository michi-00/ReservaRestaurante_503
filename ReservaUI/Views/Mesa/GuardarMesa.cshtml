@model ReservaEN.MesaEN
@{
    ViewData["Title"] = "GuardarMesa";
    Layout = "~/Views/Shared/Administrador.cshtml";
}

<h1>GuardarMesa</h1>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-plus-square-fill"></i> Agregar Mesa</h4>
        </div>
        <div class="card-body">
            <form asp-action="GuardarMesa" method="post" id="GuardarMesaForm">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Mesa VIP 1" required />
                    
                </div>
                <div class="mb-3">
                    <label asp-for="Personas" class="form-label"></label>
                    <input asp-for="Personas" class="form-control" placeholder="Ej: 4 personas" required />
                   
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save-fill"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                   
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Mesa.js"></script>
}
