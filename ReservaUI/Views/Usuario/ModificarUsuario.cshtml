@model ReservaEN.UsuarioEN
@{
    ViewData["Title"] = "ModificarUsuario";
    Layout = "~/Views/Shared/Administrador.cshtml";
}

<h1>ModificarUsuario</h1>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-white text-center">
                    <h4><i class="bi bi-pencil-square"></i> Modificar Usuario</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ModificarUsuario" method="post" id="ModificarUsuarioForm">
                        <input asp-for="Nombre_Rol" type="hidden" />
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="IdRol" class="form-label fw-bold"></label>
                            <input asp-for="IdRol" id="IdRol" class="form-control" placeholder="Rol" required />
                            <span asp-validation-for="IdRol" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" id="Nombre" class="form-control" placeholder="Nombre" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label fw-bold"></label>
                            <input asp-for="Apellido" id="Apellido" class="form-control" placeholder="Apellido" required />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Celular" class="form-label fw-bold"></label>
                            <input asp-for="Celular" id="Celular" class="form-control" placeholder="Celular" required />
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cuenta" class="form-label fw-bold"></label>
                            <input asp-for="Cuenta" id="Cuenta" class="form-control" placeholder="Cuenta" required />
                            <span asp-validation-for="Cuenta" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Contrasenia" class="form-label fw-bold"></label>
                            <input asp-for="Contrasenia" id="Contraseña" class="form-control" placeholder=" Contraseña" required />
                            <span asp-validation-for="Contrasenia" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Modificar
                            </button>
                            <a asp-action="MostrarUsuario" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Usuario.js"></script>

}