@model ReservaEN.RolEN
@{
    ViewData["Title"] = "GuardarRol";
    Layout = "~/Views/Shared/Administrador.cshtml";
}

<h1>GuardarRol</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Registrar Roles</h3></div>
                <div class="card-body">
                    <form asp-action="GuardarRol" method="post" id="GuardarRolForm">
                        <div class="mb-3">
                            <input asp-for="Nombre" class="form-control" id="Nombre" placeholder="Rol" required />

                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

